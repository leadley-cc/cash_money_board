<h2>New Transaction</h2>
<form id="new-transaction" action="/transactions" method="post">
  <label for="user-select">User:</label>
  <select id="user-select" name="user_id">
    <% @users.each do |user| %>
      <option value="<%= user.id %>" <%= "selected" if user.id == @user_id %> >
        <%= user.full_name %>
      </option>
    <% end %>
  </select>

  <label for="value">Value:</label>
  <input type="text" id="value" name="value">

  <label for="datetime">Date/time:</label>
  <input type="datetime-local" id="datetime" name="date_time">

  <label for="merchant-select">Merchant:</label>
  <select id="merchant-select" name="merchant_id">
    <% @merchants.each do |merchant| %>
      <option value="<%= merchant.id %>">
        <%= merchant.name %>
      </option>
    <% end %>
  </select>

  <input type="submit" name="add" value="Add Transaction">
</form>
