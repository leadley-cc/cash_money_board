<h2>All Transactions for <%= @user.full_name %></h2>
<table class="transaction-index">
  <thead>
    <tr>
      <th>ID</th>
      <th>Date</th>
      <th>Time</th>
      <th>Value</th>
      <th>Merchant</th>
      <th>Tag</th>
      <th>Details</th>
    </tr>
  </thead>
  <tbody>
  <% @transactions.each do |transaction| %>
    <% merchant = transaction.merchant %>
    <% tag = merchant.tag %>
    <tr class="row">
      <td class="cell">
        <%= transaction.id %>
      </td>
      <td class="cell">
        <%= transaction.print_date %>
      </td>
      <td class="cell">
        <%= transaction.print_time %>
      </td>
      <td class="cell">
        <%= transaction.value %>
      </td>
      <td class="cell">
        <a href="/merchants/<%= merchant.id %>"><%= merchant.name %></a>
      </td>
      <td class="cell">
        <a href="/tags/<%= tag.id %>"><%= tag.name %></a>
      </td>
      <td class="cell">
        <a href="/transactions/<%= transaction.id %>">Show</a>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
