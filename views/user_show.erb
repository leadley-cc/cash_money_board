<h2>User #<%= @user.id %></h2>
<div class="show">
  <table class="show-details">
    <tr>
      <th>First name</th>
      <td><%= @user.first_name %></td>
    </tr>
    <tr>
      <th>Last name</th>
      <td><%= @user.last_name %></td>
    </tr>
    <tr>
      <th>Budget Cap</th>
      <td><%= @user.print_money("budget_cap") %></td>
    </tr>
    <tr>
      <th>Spent</th>
      <td><%= @user.print_money("spent") %></td>
    </tr>
    <tr>
      <th>Budget Left</th>
      <td class="<%= 'budget-exceeded' if @user.budget_left < 0 %>">
        <%= @user.print_money("budget_left") %>
      </td>
    </tr>
  </table>
  <div class="show-buttons">
    <a href="/transactions/user/<%= @user.id %>">
      <span class="hover-underline">See Transactions</span>
    </a>
    <a href="/transactions/new/<%= @user.id %>">
      <span class="hover-underline">New Transaction</span>
    </a>
    <a href="/users/<%= @user.id %>/edit">
      <span class="hover-underline">Edit User</span>
    </a>
    <form action="/users/<%= @user.id %>/delete" method="POST" id="delete-form">
      <input type="hidden" value="Delete User">
    </form>
    <a class="delete-button" href="#" onclick="document.getElementById('delete-form').submit();">
      Delete User
    </a>
  </div>
</div>
