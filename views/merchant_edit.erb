<h2>Edit Merchant #<%= @merchant.id %></h2>
<div class="show">
  <form id="edit-merchant" action="/merchants/<%= @merchant.id %>" method="post">
    <table class="show-details">
      <tr>
        <th><label for="name">Name</label></th>
        <td><input value="<%= @merchant.name %>" type="text" id="name" name="name"></td>
      </tr>
      <tr>
        <th><label for="tag-select">Tag</label></th>
        <td><select id="tag-select" name="tag_id">
          <% @tags.each do |tag| %>
          <option value="<%= tag.id %>"
            <%= "selected" if @merchant.tag_id == tag.id %> >
            <%= tag.name %>
          </option>
          <% end %>
        </select></td>
      </tr>
      <input type="hidden" name="edit-merchant" value="Edit Merchant">
    </table>
  </form>
  <div class="show-buttons">
    <a href="#" onclick="document.getElementById('edit-merchant').submit();">
      <span class="hover-underline">Update Merchant</span>
    </a>
  </div>
</div>

