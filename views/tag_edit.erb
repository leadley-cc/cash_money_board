<h2>Edit Tag #<%= @tag.id %></h2>
<div class="show">
  <form id="edit-tag" action="/tags/<%= @tag.id %>" method="post">
    <table class="show-details">
      <tr>
        <th><label for="name">Name</label></th>
        <td><input value="<%= @tag.name %>" type="text" id="name" name="name"></td>
      </tr>
      <input type="hidden" name="edit-tag" value="Edit Tag">
    </table>
  </form>
  <div class="show-buttons">
    <a href="#" onclick="document.getElementById('edit-tag').submit();">
      <span class="hover-underline">Update Tag</span>
    </a>
  </div>
</div>
